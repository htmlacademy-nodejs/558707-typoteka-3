extends ./layouts/layout

block vars
    - const bodyClass= ``
    - const wrapperClass= `wrapper`
    - const mainClass= ``

block content
    section.post
        h1.visually-hidden Пост
        section.post__content
            h2.visually-hidden Основное содержание
            div.post__wrapper
                div.post__head
                    a.post__backwards.button.button--backwards(href='#') Назад
                    time.post__date(datetime= article.createdDate)= `${new Date(article.createdDate).getDate().toString().padStart(2, `0`)}.${(new Date(article.createdDate).getMonth() + 1).toString().padStart(2, `0`)}.${new Date(article.createdDate).getFullYear()}, ${new Date(article.createdDate).getHours().toString().padStart(2, `0`)}:${new Date(article.createdDate).getMinutes().toString().padStart(2, `0`)}`
                    h2.post__title.title.title--main= article.title
                    ul.post__themes.themes
                        each category in article.category
                            li.themes__item
                                a.themes__item-link(href='#')= category
                                    sup 88
                                button.themes__remove-btn(type='button') Удалить категорию
                div.post__picture
                    img(src='/img/sea-fullsize@1x.jpg', alt='пейзаж море, скалы, пляж')
                div.post__text
                    p= article.fullText
        div.post__wrapper.post__wrapper--comments
            section.post__comments.comments
                h2.comments__title.title.title--middle Комментарии
                ul.comments__list
                    each comment in article.comments
                        li.comments__comment
                            div.comments__avatar.avatar
                                img(src='/img/avatar-1.png', alt='аватар пользователя')
                            div.comments__text
                                div.comments__head
                                    p Евгений Петров •
                                    time.comments__date(datetime='2019-03-21T20:33') 21.03.2019, 20:33
                                p.comments__message= comment.text
                div.comments__footer.comments__footer--user
                    form(action='#', method='POST')
                        div.comments__avatar.avatar
                            img(src='/img/avatar-2.png', alt='аватар пользователя')
                        label
                            textarea(rows='1', placeholder='Присоединиться к обсуждению')
                        button.comments__button.button.button--colored(type='submit') Опубликовать
